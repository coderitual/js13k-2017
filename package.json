{
  "name": "js13kserver",
  "version": "1.0.2",
  "description": "js13kgames game jam server",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "run-p watch start:*",
    "start:server": "nodemon --delay 250ms index.js",
    "start:client": "browser-sync start --reloadDelay 500 --proxy localhost:3000 --port 8080 --files public/*.js",
    "build:client": "rollup src/client/index.js --o public/client.js --f iife",
    "build:server": "rollup src/server/index.js --o public/server.js --f cjs",
    "build:shared": "rollup src/shared/index.js --o public/shared.js --f cjs",
    "build:svg": "svgo -f assets -o public/assets",
    "build": "run-p build:*",
    "watch:client": "rollup src/client/index.js --watch --o public/client.js --f iife",
    "watch:server": "rollup src/server/index.js --watch --o public/server.js --f cjs",
    "watch:shared": "rollup src/shared/index.js --watch --o public/shared.js --f cjs",
    "watch": "run-p watch:*"
  },
  "keywords": [
    "js13kgames",
    "server"
  ],
  "engines": {
    "node": "8.*"
  },
  "dependencies": {
    "express": "4.15.*",
    "glitchd-client-node": "*",
    "socket.io": "2.0.*"
  },
  "devDependencies": {
    "browsersync": "^0.0.1-security",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.0",
    "rollup": "^0.48.2",
    "rollup-plugin-url": "^1.2.0",
    "svgo": "^0.7.2"
  }
}
